ready = ->
  window.addEventListener 'error', ((e) ->
    error = $(e.target)
    if error.hasClass('avatar')
      error.attr('src', '<%= image_path('balls.svg') %>')
    return
  ), true

$(document).on 'turbolinks:load', ready