<% provide(:title, 'Log In') %>
<% provide(:static, 'static') %>

<div class="static-land"></div>
<div class="static-center" style="width: 450px; padding: 50px; background: #f5f5f5; border-radius: 25px; box-shadow: #000000 0 0 25px -5px;">
  <h1>Sign In</h1>

  <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to '(forgot password)', new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: 'checkbox inline' do %>
          <%= f.check_box :remember_me %>
          <span>Remember me</span>
      <% end %>

      <%= f.submit 'Log In', class: 'btn btn-primary' %>
  <% end %>

  <p>Not registered with Formic Learning? <%= link_to 'Find out how you could be!', features_path %></p>
</div>