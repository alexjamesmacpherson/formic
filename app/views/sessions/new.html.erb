<% provide(:title, 'Sign In') %>
<% provide(:static, 'static') %>
<% provide(:login, 'login') %>

<div class="static-land"></div>
<div class="static-center login-panel">
  <div class="login-panel-head">
    <h1>Sign In</h1>
  </div>

  <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type} login-alert") %>
  <% end %>

  <div class="login-panel-body">
    <%= form_for(:session, url: login_path) do |f| %>

        <%= f.email_field :email, class: 'formic-form', placeholder: 'Email Address' %>
        <%= f.password_field :password, class: 'formic-form', placeholder: 'Password' %>

        <div class="form-row">
          <span style="margin:6px 0 6px 40px; font-weight:bold; font-size:16px;">Remember me</span>
          <%= f.label :remember_me, class: 'switch', style: 'margin:0 40px 0 0;' do %>
              <%= f.check_box :remember_me %>
              <div class="slider"></div>
          <% end %>
        </div>

        <%= f.submit 'Log In', class: 'btn formic-button', style: 'margin-top:0;' %>

        <%= link_to '(forgot password)', new_password_reset_path, class: 'form-text' %>
    <% end %>

    <p class="form-text">Not registered with Formic Learning?<br><%= link_to 'Find out how you could be!', features_path %></p>
  </div>
</div>