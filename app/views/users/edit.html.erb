<% provide(:title, "Edit Profile") %>
<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, html: { multipart: true } do |f| %>
        <% @error = @user %>
        <%= render 'layouts/errors' %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :avatar %>
        <%= image_tag(@user.avatar_url, class: 'avatar') if @user.avatar? %>
        <%= f.file_field :avatar, accept:'image/*', class: 'form-control' %>
        <%= f.hidden_field :avatar_cache %>

        <%= f.label :remove_avatar, class: 'checkbox inline' do %>
            <%= f.check_box :remove_avatar %>
            <span>Remove Avatar</span>
        <% end %>

        <%= f.label :bio %>
        <%= f.text_area :bio, rows: '4', class: 'form-control', placeholder: 'Leave blank for no bio' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, 'Confirmation' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>