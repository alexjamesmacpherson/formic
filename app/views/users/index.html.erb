<% provide(:title, 'Users') %>
<% provide(:top_title, @title) %>
<% if @title != 'All Users' %>
    <% provide(:top_link, users_path) %>
    <% provide(:top_tip, 'Show All Users') %>
<% end %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="pagination">
      <%= will_paginate @users, :container => false %>
      <div class="center"><%= page_entries_info %></div>
    </div>

    <ul class="record-list">
      <% @users.each do |user| %>
          <%= render user %>
      <% end %>
    </ul>
  </div>
</div>
