<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
<h2><%= @user.bio %></h2>
<h3><%= @user.email %></h3>
<h3><%= @user.address %></h3>
<h3><%= School.find(@user.school_id).name %></h3>
<%= link_to 'Remove User', @user, method: :delete, data: { confirm: 'This action cannot be undone. Are you sure?' } %>