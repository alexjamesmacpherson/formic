<% if @error.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger error-alert">
        The form contains <%= pluralize(@error.errors.count, 'error') %>.
      </div>
      <ul style="margin:0;">
        <% @error.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>