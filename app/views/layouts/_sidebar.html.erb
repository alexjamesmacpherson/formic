<div class="side-bar">
  <div class="nav-avatar">
    <%= image_tag(current_user.avatar.url, class: 'avatar') %>
  </div>
  <%= link_to raw('<i class="material-icons">home</i>
              <span class="tip-text">Profile and timetable</span>'),
              current_user, class: 'nav-button tip' %>

  <%= render 'layouts/notifications-panel' %>
  <%= render 'layouts/chats-panel' %>

  <%= link_to raw('<i class="material-icons">chrome_reader_mode</i>
              <span class="tip-text">Homework</span>'),
              assignments_path, class: 'nav-button tip' if current_user.is?(:group, [1,2]) %>
  <%= link_to raw('<i class="material-icons">chrome_reader_mode</i>
              <span class="tip-text">Student Assignments</span>'),
              assignments_path, class: 'nav-button tip' if current_user.is?(:group, 3) %>

  <%= link_to raw('<i class="material-icons">people</i>
              <span class="tip-text">All users</span>'),
              users_path, class: 'nav-button tip' %>
  <%= link_to raw('<i class="material-icons">person_add</i>
              <span class="tip-text">Add new user</span>'),
              new_user_path, class: 'nav-button tip' if current_user.is?(:group, 4) %>


  <%= link_to raw('<i class="material-icons">settings</i>
              <span class="tip-text">Account settings</span>'),
              edit_user_path(current_user), class: 'nav-button tip settings' %>
  <%= link_to raw('<i class="material-icons">exit_to_app</i>
              <span class="tip-text">Logout</span>'),
              logout_path, method: :delete, class: 'nav-button tip logout' %>
</div>