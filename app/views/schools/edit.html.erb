<% provide(:title, "Edit - #{@school.name}") %>
<% provide(:top_title, 'Edit School') %>
<% provide(:top_link, school_path(@school)) %>

<%= form_for @school, html: { multipart: true } do |f| %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <% @error = @school %>
        <%= render 'layouts/errors' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="profile-block">
          <div class="profile-edit-avatar">
            <% if @school.logo? %>
                <%= f.label :remove_logo, class: 'avatar-button' do %>
                    <%= f.check_box :remove_logo %>
                    <%= image_tag(@school.logo.url, class: 'avatar logo') %>
                    <div class="avatar-delete">Click to remove</div>
                <% end %>
                <%= f.label 'Select New Logo:', class: 'form-text', style: 'margin: 10px 0 0;' %>
            <% else %>
                <%= image_tag(@school.logo.url, class: 'avatar logo') %>
                <%= f.label 'Select Logo:', class: 'form-text', style: 'margin: 10px 0 0;' %>
            <% end %>
            <%= f.file_field :logo, accept:'image/*', class: 'file-upload' %>
            <%= f.hidden_field :logo_cache %>
          </div>

          <div class="profile-edit-info">
            <%= f.text_field :name, class: 'formic-form', placeholder: 'School Name' %>
            <%= f.text_field :motto, class: 'formic-form', placeholder: 'School Motto - leave blank for no motto' %>
            <%= f.phone_field :phone, class: 'formic-form', placeholder: 'Office Phone Number' %>
            <%= f.text_area :address, rows: '4', class: 'formic-form', placeholder: 'Address' %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= f.submit 'Save Changes', class: 'btn formic-button' %>
      </div>
    </div>
<% end %>